.addressList {
  height: 100vh;
  background-color: #f8f8f8;
}
.addressList .topBlock {
  height: 1rpx;
}
.addressList .order-item {
  height: 160rpx;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: relative;
}
.addressList .order-item .addressLeft {
  width: 100%;
  background-color: #fff;
  z-index: 5;
  overflow: hidden;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 8px 15px;
}
.addressList .order-item .addressLeft .left .topTitle {
  font-size: 17px;
  color: #282828;
  font-weight: 500;
}
.addressList .order-item .addressLeft .left .bottom {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 15px;
  color: #6f6f6f;
}
.addressList .order-item .addressLeft .left .bottom .name {
  width: 125rpx;
}
.addressList .order-item .addressLeft .left .bottom .phone {
  margin-left: 10px;
}
.addressList .bottomBlock {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  border-top: 1px solid #efefef;
  padding: 20rpx 0;
}
.addressList .bottomBlock .button {
  color: #fff;
  margin: 5px 20rpx;
  background-color: #1b74ce;
  text-align: center;
  padding: 25rpx 0;
  font-size: 18px;
  font-weight: bold;
  -webkit-border-radius: 30px;
          border-radius: 30px;
}
.remove {
  width: 160rpx;
  height: 100%;
  background-color: red;
  color: white;
  position: absolute;
  top: 0;
  right: -160rpx;
  text-align: center;
}
.remove .removeBlock {
  height: 100%;
  margin-top: 30rpx;
}
.order-item:not(:first-child) {
  margin-top: 10px;
}

